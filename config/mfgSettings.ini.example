; MFG settings file. For more information about these settings, see example.ini
; file.  


[general]
prng_seed = 1
camera = "cam-01"
output_dir = ""


[features]
; Key Point/Feature Detection Algorithm to use:
;  1 = SIFT
;  2 = SURF
;  3 = GoodFeat
algorithm = 1
descriptor_radius = 21
; Scale Invariant Feature Transform (SIFT) settings
[features/sift]
threshold = 0.6
; Good Features to Track (GFTT) settings
[features/gftt]
max_points = 300
quality = 0.01
min_point_distance = 5


; Lucas-Kanade Optic Flow settings
[optic-flow]
min_eigenval = 0.001
window_size = 19


; Multi-Layer Feature Graph settings
[mfg]
point_to_plane_dist = 0.16
num_recent_points = 400
num_recent_lines = 50
points_per_plane = 100
frame_step = 4
frame_step_init = 80
vpoint_angle_thresh = 5
depth_limit = 12

; Bundle Adjustment settings
[ba]
weight_vpoint = 15.0
weight_line = 1.0
weight_plane = 100.0
num_frames = 10
use_kernel = true
[ba/kernel]
delta_vpoint = 1.0
delta_point = 1.0
delta_line = 3.0
delta_plane = 1.0


;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Camera settings below
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

; Camera 1: Nikon Video Camera, 640x360, Rectified
[cam-01]
width = 0
image = "/path/to/dataset/first/image.png"
[cam-01/intrinsics]
alpha_x = 505.3815
alpha_y = 500.4342
gamma = 0
u_0 = 319.5203
v_0 = 178.0134
[cam-01/distCoeffs]
c0 = 0
c1 = 0
c2 = 0
c3 = 0

